  height: 60rpx;
}
.coins_shops .buy image{
  width:150rpx;
  height: 52rpx;
}
.coins_shops .flex-row{
  border-radius: 10rpx;
  padding: 20rpx 10rpx;
  margin: 20rpx 10rpx;
  font-size: 24rpx;
  color:#3A3A3A;
}
.coins_shops .title{
  width: 100rpx;
  margin: 20rpx auto;
  padding: 10rpx;
  background: #fff;
  border-radius: 10rpx;
}
.coins_shops .sign,.invite,.shareG{
  background:  coral;
  color:#fff;
  padding: 10rpx 30rpx;
  border-radius: 25rpx;
  margin-right:0rpx;
  font-size: 24rpx;
  line-height: 20rpx;
}
.coins_shops .signed,.shared{
  background: #aaa;
}
.coins_shops .buy-block{
  margin: 20rpx;
  padding:20rpx;
  background: #F0F2A7;
  border-radius: 20rpx;
}
.coins_shops .price{
  bottom:5rpx;
  right:5rpx;
  text-align:right;
  line-height:25rpx;
  color:#000;
  margin: 10rpx;
}
.flex2 .name{
  background: #fff;
