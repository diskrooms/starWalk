<!--index.wxml-->
<view class="container">
      <view class='simple item'>
          <view class='title'>
            <view class='left left_title'></view>
            <text class='title_name'>简笔画</text>
            <view class='right right_title'></view>
          </view>
          <view class='img_con flex flex-row'>
            <view class='img_wrap flex flex-column'>
                  <image src="../../images/plane.png" mode='widthFix' bindtap='detail' class='img' data-ename='plane' data-cname='小飞机'></image>
                  <view class="triangle-bottomright"></view>
                  <div class="free">免费</div>
            </view>

            <view class='img_wrap flex flex-column'>
                  <image src="../../images/house.png" mode='widthFix' bindtap='detail' class='img' data-ename='house' data-cname='别墅'></image>
                  <view class="triangle-bottomright"></view>
                  <div class="free price">300智慧</div>
            </view>
          </view>
          <view class='img_con flex flex-row'>
            <view class='img_wrap flex flex-column'>
                  <image src="../../images/rabbit.png" mode='widthFix' bindtap='detail' class='img' data-ename='rabbit' data-cname='小白兔'></image>
                  <view class="triangle-bottomright"></view>
                  <div class="free">免费</div>
            </view>

            <view class='img_wrap flex flex-column'>
                  更多
            </view>
          </view>
      </view>

      <view class='plant item'>
          <view class='title'>
            <view class='left left_title'></view>
            <view class='title_name'>花纹</view>
            <view class='right right_title'></view>
          </view>
          <view class='img_con flex flex-row'>
            <view class='img_wrap flex flex-column'>
                  <image src="../../images/figure1.png" mode='widthFix' bindtap='detail' class='img' data-ename='figure1' data-cname='形状1'></image>
                  <view class="triangle-bottomright"></view>
                  <div class="free">免费</div>
            </view>

            <view class='img_wrap flex flex-column'>
                  <image src="../../images/figure2.png" mode='widthFix' bindtap='detail' class='img' data-ename='figure2' data-cname='形状2'></image>
