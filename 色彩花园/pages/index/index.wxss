  height: 40rpx;
}

.add-smart{
  font-size: 30rpx;
  width: 24rpx;
  height: 24rpx;
  background: #fff;
  display: inline-block;
  color:#3A3A3A;
  border-radius: 12rpx;
  text-align: center;
  line-height: 24rpx;
}

.contact{
  background: url('http://coder.51tui.vip/Public/miniProgram/my_garden/contact-x3.png') no-repeat;
  background-size: 105rpx 105rpx;
  width: 105rpx;
  height: 105rpx;
  margin:0;
}
