/**index.wxss**/
/* top start */
.top{
  height: 105rpx;
  margin:10rpx 10rpx 0rpx 20rpx;
  justify-content:space-between;
}
.level-con{
  width: 200rpx;
  /*height: 66rpx;*/
  position: relative;
  top:5rpx;
}
.level{
  width: 60rpx;
  height: 73rpx;   
  line-height: 58rpx;
  border-radius: 33rpx;
  background: #F0F2A7;
  color:#fff;
  font-size: 12pt;
  z-index: 8;
  position: relative;
  background: url('http://coder.51tui.vip/Public/miniProgram/my_garden/level-x2.png') no-repeat top left;
  background-size: 60rpx 73rpx;
}
.energy{
  width:150rpx;
  position: absolute;
  top:21rpx;
  left:50rpx;
  z-index: 1;
}
.count{
  color:#fff;
  position: absolute;
  top:20rpx;
  left:90rpx;
  z-index: 10;
}
.smart-con{
  background: url('http://coder.51tui.vip/Public/miniProgram/my_garden/smart-x2.png') no-repeat;
  background-size: 32rpx 52rpx;
  /*width: 70rpx;*/
  height: 52rpx;
  line-height: 52rpx;
  font-size: 9pt;
  color:3A3A3A;
  padding-left: 42rpx;
  vertical-align: middle;
  display: table-cell;
}

.smart{
  position: relative;
  padding: 0 10rpx;
  color:#fff;
  background:  cornflowerblue;
  border-radius: 20rpx;
  line-height: 40rpx;
  height: 40rpx;
  display: inline-block;
}

.add-smart{
  font-size: 30rpx;
  width: 24rpx;
  height: 24rpx;
  background: #fff;
  display: inline-block;
  color:#3A3A3A;
  border-radius: 12rpx;
  text-align: center;
  line-height: 20rpx;
  margin:0 0 0 5rpx;

  /*position: absolute;
  margin: auto; 
  top: 0;  bottom: 0; right: 0; */
}

.contact{
  background: url('http://coder.51tui.vip/Public/miniProgram/my_garden/contact-x3.png') no-repeat;
  background-size: 105rpx 105rpx;
  width: 105rpx;
  height: 105rpx;
  margin:0;
}
/*top*/

.garden{height: 100%;}
.garden .item{margin: 100rpx 0rpx}
.garden .img_wrap{margin: 30rpx;}

.share{display: inline-block;width: 96rpx;height: 96rpx;padding:0;background: none;}
.share .share_icon{width: 96rpx;height: 96rpx;}
.save{display: inline-block;margin:20rpx 0 0 50rpx;padding: 0;background: none;height: 96rpx;}
.save .save_icon{width: 96rpx;height: 96rpx; }

.title_name{
  font-size: 30rpx;
  padding: 5rpx 10rpx;
  background:   coral;
  border-radius: 5rpx;
  color:#fff;
}
.download{position: absolute;left:0;right:0;margin:auto;z-index: 100;text-align: center;}

.title{
  text-align: center;
  margin: 30rpx 0 10rpx 0;
}
.title2{
  display: inline-block;
  width:320px;
  background-color:cornflowerblue;
  color:#fff;
  padding: 20rpx 0rpx;
}
/* 遮罩层 */
.layer{
  position: absolute;
  width: 100%;
  height: 150%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 99;
}

/* 图片块 */
.img_wrap{
  width: 300rpx;
  height: 300rpx;
  background: blanchedalmond;
  margin:10rpx;
  font-size: 28rpx;
  position: relative;
  border-radius: 8rpx;
}
.img_wrap .img{
  width: 250rpx;
}
.triangle-bottomright {
  width: 0;
  height: 0;
  border-bottom: 45px solid  cornflowerblue;
  border-left: 45px solid transparent;
  position: absolute;
  bottom: 0;
  right: 0;
}
.free{
  position:absolute;
  bottom:10rpx;
  right:5rpx;
  font-size:10px;
  color:#fff;
}
.price{
  width:80rpx;
  bottom:5rpx;
  right:5rpx;
  text-align:right;
  line-height:25rpx;
  color:#000;
}

/* 金币商店 */
.coins_shops{
  background: url('http://coder.51tui.vip/Public/miniProgram/my_garden/ui/shops-bg.png') no-repeat center center;
  background-size: 688rpx 797rpx;
  width:688rpx;
  height: 797rpx;
  position: absolute;
  top:150rpx;
  left:30rpx;
  z-index: 100;
  padding: 20rpx 0;
  font-family: zcool;
}
.coins_shops .coins_shops_scroll{
  position: absolute;
  width:70%;
  text-align: center;
  top: 250rpx;
  height: 500rpx;
  left: 100rpx;
}
.coins_shops .coins{
  width:40rpx;
  height: 60rpx;
}
.coins_shops .buy image{
  width:150rpx;
  height: 52rpx;
}
.coins_shops .flex-row{
  background: #F0F2A7;
  border-radius: 10rpx;
  padding: 20rpx 10rpx;
  margin: 20rpx 10rpx;
  font-size: 22rpx;
}
.coins_shops .title{
  width: 100rpx;
  margin: 20rpx auto;
  padding: 10rpx;
  background: #fff;
  border-radius: 10rpx;
}
/*关闭按钮*/
 .close{
  background:url('http://coder.51tui.vip/Public/miniProgram/my_garden/ui/dialog-close.png') no-repeat 0 0;
  background-size:76rpx 75rpx;
  width:76rpx;
  height: 75rpx;
  position: absolute;
  top:0rpx;
  right:0rpx;
  z-index: 101;
}