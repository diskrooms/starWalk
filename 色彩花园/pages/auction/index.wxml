<view class="auction container text-align-center">
     
      <view class='item'>
          <view class='title'>
            <view class='left left_title'></view>
            <text class='title_name'>// 我的购买 //</text>
            <view class="tips">*手指左右滑动查看更多</view>
          </view>
          <scroll-view class='img_con flex flex-row' scroll-x>
            <view class='img_wrap flex flex-column'>
                  <image class='img' src="../../images/plane.png" mode='widthFix' bindtap='detail' data-ename='plane' data-cname='小飞机'></image>
                  <view class="author">作者 / waldenpond</view>
            </view>
            <view class='img_wrap'>
                  <image class='img' src="../../images/plane.png" mode='widthFix' bindtap='detail' data-ename='plane' data-cname='小飞机'></image>
