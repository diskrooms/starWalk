<!--index.wxml-->
<view class="auction-con container text-align-center">
     
      <view class='item'>
          <view class='title'>
            <view class='left left_title'></view>
            <text class='title_name'>// 我的购买 //</text>
            <view class="tips px-22">*手指左右滑动查看更多</view>
          </view>
          <scroll-view class='img_con flex flex-row' scroll-x>
            <view class='img_wrap flex flex-column'>
                  <image class='img' src="../../images/plane.png" mode='aspectFit' bindtap='detail' data-ename='plane' data-cname='小飞机'></image>
                  <view class="author">waldenpond 作品</view>
            </view>
            <view class='img_wrap'>
                  <image class='img' src="../../images/plane.png" mode='widthFix' bindtap='detail' data-ename='plane' data-cname='小飞机'></image>
                  <view class="author">waldenpond 作品</view>
            </view>
            <view class='img_wrap'>
                  <image class='img' src="../../images/plane.png" mode='widthFix' bindtap='detail' data-ename='plane' data-cname='小飞机'></image>
                  <view class="author">waldenpond 作品</view>
            </view>
            <view class='img_wrap'>
                  <image class='img' src="../../images/plane.png" mode='widthFix' bindtap='detail' data-ename='plane' data-cname='小飞机'></image>
                  <view class="author">waldenpond 作品</view>
            </view>
          </scroll-view>
          
      </view>

      <view class='item'>
          <view class='title'>
            <view class='left left_title'></view>
            <text class='title_name'>// 我的拍卖 //</text>
            <view class='right right_title'></view>
          </view>

          <scroll-view class='img_con flex flex-row' scroll-x>
            <view class='img_wrap flex flex-column'>
                  <image src="../../images/figure1.png" mode='widthFix' bindtap='detail' class='img' data-ename='figure1' data-cname='形状1'></image>
                  <view class="triangle-bottomright"></view>
                  <div class="status">拍卖中</div>
            </view>

            <view class='img_wrap flex flex-column'>
                  <image src="../../images/figure2.png" mode='widthFix' bindtap='detail' class='img' data-ename='figure2' data-cname='形状2'></image>
                  <view class="triangle-bottomright"></view>
                  <div class="status sold">已售出</div>
            </view>

            <view class='img_wrap flex flex-column'>
                  <image src="../../images/figure2.png" mode='widthFix' bindtap='detail' class='img' data-ename='figure2' data-cname='形状2'></image>
                  <view class="triangle-bottomright"></view>
                  <div class="status sold">已售出</div>
            </view>
          </scroll-view>
          
      </view>

      <view class='item'>
          <view class='title'>
            <text class='title_name'>// 拍卖集市 //</text>
            <view class='right right_title'></view>
          </view>
          <view class="text-align-left">
            <view class='img_wrap flex flex-column'>
                  <image src="../../images/owl.png" mode='widthFix' bindtap='detail' class='img' data-ename='owl' data-cname='猫头鹰'></image>
                  <!--<view class="triangle-topright"></view>
                  <div class="price">100智慧</div>-->
            </view>
            <div class="auction text-align-center">点击购买</div>
            
            <view class='img_wrap flex flex-column'>
                  <image src="../../images/owl.png" mode='widthFix' bindtap='detail' class='img' data-ename='owl' data-cname='猫头鹰'></image>
                  <!--<view class="triangle-topright"></view>
                  <div class="price">100智慧</div>--> 
            </view>
            <div class="auction text-align-center">点击购买</div>

            <view class='img_wrap flex flex-column'>
                  <image src="../../images/owl.png" mode='widthFix' bindtap='detail' class='img' data-ename='owl' data-cname='猫头鹰'></image>
                  <!--<view class="triangle-topright"></view>
                  <div class="price">100智慧</div>-->
            </view>
            <div class="auction text-align-center">点击购买</div>
          </view>
          
      </view>
      
    
  <view class="layer" wx:if="{{lay_status}}" style="top:0rpx;height:300%"></view>
</view>
