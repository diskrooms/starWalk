/* 开垦土地对话框 */
.dig-dialog-con{
  position: absolute;
  top:500rpx;
  left:100rpx;
  width:520rpx;
  height: 250rpx;
  padding:20rpx;
}
.dig-dialog{
  width:500rpx;
  height: 200rpx;
  line-height: 50rpx;
  background:url('http://coder.51tui.vip/Public/miniProgram/my_garden/ui/dig-dialog.png') no-repeat 0 0;
  position: absolute;
  /*left:100rpx;
  top:500rpx;*/
