  background-size:211rpx 73rpx;
  width:211rpx;
  height: 73rpx;
  margin:0 auto;
  line-height: 73rpx;
  color:#fff;
}
.dig-dialog-con .close{
  background:url('http://coder.51tui.vip/Public/miniProgram/my_garden/ui/dialog-close.png') no-repeat 0 0;
  background-size:76rpx 75rpx;
  width:76rpx;
  height: 75rpx;
  position: absolute;
  top:0rpx;
  right:0rpx;
  z-index: 101;
}

