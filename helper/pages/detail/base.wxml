<!--pages/detail/tool.wxml-->
  <view id="container">
    <textarea bindblur="bindTextAreaBlur" placeholder="这里输入需要编码的字符串" class='textarea text-align-center' id='data' value='{{data}}'></textarea>
  <view class='px-26 text-align-center' id='condition'>
    
    <view id='btn'>
        <view bindtap="encode" class='crypt-btn inline-block' id='encode'>编码</view>
        <view bindtap="decode" class='crypt-btn inline-block' id='decode'>解码</view>
    </view>
  </view>
    <textarea bindblur="decodeBlur" class='textarea text-align-center px-26' id='result' placeholder="这里输入需要解码的字符串" value='{{result}}'></textarea>
  </view>
