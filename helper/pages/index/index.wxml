<view class='apis'>
    <view class='list-title'><text class='list-title-text left'>面试宝典</text></view>
    <view class="list-content">
      <view class="direction-tip"></view>
      <scroll-view scroll-x="true" class="list-content-scroll">
        <block wx:for="{{interview_skills}}">
          <view bindtap='jumpToNewPage2' id='{{item.id}}' class="api inline-block list-item"><text class='block list-item-info px-22'>{{item.name}}</text>
          </view>
        </block>
        <view bindtap='instruction' class="api inline-block list-item"><text class='block list-item-info px-22'>说明</text></view>
      </scroll-view>
    </view>
</view>

<view class='apis'>
    <view class='list-title'><text class='list-title-text left'>实用工具</text></view>
    <view class="list-content">
      <view class="direction-tip"></view>
      <scroll-view scroll-x="true" class="list-content-scroll">
        <block wx:for="{{tools}}">
          <view bindtap='jumpToNewPage3' id='{{item.id}}' class="api inline-block list-item"><text class='block list-item-info px-22'>{{item.name}}</text>
          </view>
        </block>
        <view bindtap='show_remain_tools' class="api inline-block list-item"><text class='block list-item-info px-22'>...</text></view>
      </scroll-view>

      <view class="{{remain_tools_status}}">
        <block wx:for="{{remain_tools}}">
            <view bindtap='jumpToNewPage3' id='{{item.id}}' class="api inline-block list-item"><text class='block list-item-info px-22'>{{item.name}}</text>
            </view>
        </block>
      </view>
    </view>
</view>
