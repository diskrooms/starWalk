/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.api{
  width:80rpx;
  height: 80rpx;
  line-height: 80rpx;   /*设置文本居中*/
  background-color: #0096E6;
  color:#fff;
  margin:20rpx;
  padding: 20rpx;
  border-radius: 50%;
}

.list-item{
  text-align: center;
  vertical-align: middle;
}

.list-title{
    text-align: center;
    background-color: #0096E6;
    color:#fff;
    padding: 20rpx 0rpx;
    font-size: 28rpx;
}
.list-content{
  text-align: center;
}
.list-item-info{font-size: 12rpx;}

.list-content-scroll {
    width: 100%;
    background-color: #f5f5f5;
    padding: 20rpx 0 0;
    white-space: nowrap;
}

/**
去除横向滚动条
*/
::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}