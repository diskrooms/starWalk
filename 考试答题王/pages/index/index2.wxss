/* 登录样式 */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 20rpx 0 0 20rpx;
}
.userCoins{
  margin: 20rpx 20rpx 0 0;
}
.userCoins .coins{
    width: 64rpx;
    height: 64rpx;
    display: block;
}
.userCoins .count{
  color:#fff;
  font-weight: bold;
}
.userinfo-avatar {
  width: 80rpx;
  height: 80rpx;
  margin: 0rpx;
  border: 1rpx solid #ffed00;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
  font-weight: bold;
}
.container{
  background: url('http://coder.51tui.vip/Public/miniProgram/bg.png');
  background-size: cover;
}
.login .container-header{
  background: #57b7ec;
  border-radius: 20rpx;
  margin:20rpx;
  padding: 20rpx;
}
.login .container-content{

}
.login .container-content .class_name{
  color:#fff;
  font-family: 'zcool';
}
.login .container-content .computer .class_name{
  color:#595959;
}
.login .container-content .image_container .class_icon{
  width: 80rpx;
  height: 80rpx;
  }
.login .container-content .test,.farm{
  padding:20rpx;
  width:100%;
  box-sizing:border-box;
}
.login .container-content .farm{
  margin:20rpx;
}
.login .container-content .test .item{
  border-radius: 20rpx;
  padding:20rpx;
}
.login .container-content .test .item.wen{
  background:#5581ea;
}
.login .container-content .test .item.shi{
  background:#57b7ec;
}
.login .container-content .test .item.zhe{
  background:#26a8b5;
}
.login .container-content .test .item.jing{
  background:#ae48c8;
}
.login .container-content .test .item.computer{
  background:#fcf782;
  color:#000;
}
.login .container-content .test .item.nature{
  background:#57b7ec;
}
.login .container-content .test .item.doubt{
  background:#3c3c3c;
}
.login .container-content .farm .item{
  width:100%;
  height: 180rpx;
  border-radius: 20rpx;
}
.login .container-content .farm .item.garden{
  background: url("http://coder.51tui.vip/Public/garden_simple5.png");
  background-size:cover;
  border:3rpx solid #fff;
}
.login .container-content .farm .item.shop{
  background: url("http://coder.51tui.vip/Public/shop2.png");
  background-size:cover;
  border:3rpx solid #fff;
  margin-top:30rpx;
  position: relative;
}
.login .container-content .farm .item.shop .layer{
  width:100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
}
.login .container-content .farm .item.shop  image{
  width: 96rpx;
  height: 96rpx;
  position: absolute;
  top:20rpx;
  z-index: 9999;
}
/* 未登录样式 */
.nologin{
  position:absolute;
  top:0;
  bottom:0;
  left:0;
  right:0;
  margin:auto;
  height:400rpx;
  width:70%;
  border-radius:0rpx;
}
.nologin .container-content{margin: 100rpx auto;}
.nologin .container-content .start{
  padding:20rpx;
  background:#ffed00;
  color:#595959;
  border-radius: 45rpx;
  margin:20rpx auto;
  width:180rpx;
  box-sizing: content-box;
  line-height: 50rpx;
  font-family: zcool;
}

