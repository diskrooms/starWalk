/* pages/play/index.wxss */
@import '/utils/code-lighter.wxss';
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 10rpx 0 0 20rpx;
}
.userCoins{
  margin: 20rpx 20rpx 0 0;
}
.userCoins .coins{
    width: 64rpx;
    height: 64rpx;
    display: block;
}
.userCoins .count{
  color:#fff;
  font-weight: bolder;
}
.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 0rpx 0 10rpx 0;
  border: 5rpx solid #fff;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
  font-weight: bold;
}
.container{
  background: url('http://coder.51tui.vip/Public/miniProgram/play_index_bg.png');
  background-size: cover;
}
.container-header{
  background: #57b7ec;
  border-radius: 20rpx;
  margin:20rpx;
  padding: 20rpx;
}
.container-middle{
  position: relative;
  z-index: 1000;
  bottom:-60rpx;
  margin-top:-50rpx;
}
.container-middle .title{
  margin:0 auto;
  width:550rpx;
  height:115rpx;
  display: block;
}
.container-middle .indexq{
  position: absolute;
  top:30rpx;
  left:330rpx;
  color:#fff;
}
.container-content{
  margin: 20rpx;
  background: #fff;
  border-radius: 20rpx;
}

.progress_box{
  float: left;
  position: relative;
  width:50px;
  height: 50px; /* 这里的宽高是必须大于等于canvas圆环的直径 否则绘制到盒子外面就看不见了
// 一开始设置 width:440rpx; height:440rpx; 发现 在360X640分辨率的设备，下绘制的圆环跑盒子外去了
// 小程序使用rpx单位适配 ，但是canvas绘制的是px单位的。所以只能用px单位绘制的圆环在盒子内显示*/
  display: flex; 
  align-items: center;
  justify-content: center;
  /*background-color: #fff;*/
  margin: 20rpx 120rpx;
}
.progress_bg{
  position: absolute;
  width:50px;
  height: 50px;
}
.progress_canvas{
  width:50px;
  height: 50px;
}
.progress_text{
  position: absolute;
  display: flex; 
  align-items: center;
  justify-content: center;
  z-index: 10100;
}
.progress_info{  
  font-size: 36rpx;
  letter-spacing: 2rpx;
  color:#fb9126;
}
.progress_dot{
  width:16rpx;
  height: 16rpx; 
  border-radius: 50%;
  background-color: #fb9126;
}

.question{
  padding:70rpx 30rpx 10rpx 30rpx;
}
.answer{
  padding: 0 20rpx;
}
.answer-item{
  margin:30rpx 0rpx;
  border-radius: 35rpx;
  /*border:1px solid #fb9126;*/
  background:#fb9126;
  padding: 20rpx 20rpx;
  color:#fff;
  font-size: 32rpx;
}
.answer-item.correct{
  background: #4caf50;
  color:#fff;
}
.answer-item.error{
  background: #f44336;
  color:#fff;
}
